{
    "name": "sadeqateyat/laminas-config-helper",
    "description": "Provide Controller plugin and View helper for reading a config.",
    "type": "library",
    "keywords": [
        "laminas framework",
        "config",
        "helper",
        "plugin"
    ],
    "license": "MIT",
    "homepage": "https://github.com/sadeqateyat/laminas-config-helper",
    "authors": [
        {
            "name": "Sadeq Ateyat",
            "email": "sad5f@hotmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ~8.0.0 || ~8.1.0",
        "laminas/laminas-mvc": "^3.1.1",
        "laminas/laminas-config": "^2.6 | ^3.0",
        "laminas/laminas-dependency-plugin": "^1.0 | ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    },
    "autoload": {
        "psr-0": {
            "ConfigHelper": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "ConfigHelperTest": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true
        }
    }
}
